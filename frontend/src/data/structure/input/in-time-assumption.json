{
  "meta": {
    "version": "1.0.0",
    "purpose": "Legal timeline standardization for evidence analysis",
    "description": "Organize documents, emails, and communications into discrete temporal units for pattern detection"
  },

  "timestampStandard": {
    "fullFormat": "YYYY-MM-DD HH:mm:ss",
    "timezone": "Local",
    "preserveOriginalTimezone": true,
    "missingTimestampHandling": "flag_for_manual_review"
  },

  "temporalBreakdown": {
    "year": {
      "enabled": true,
      "format": "YYYY",
      "example": "2023"
    },

    "quarter": {
      "enabled": true,
      "format": "Q{n}",
      "mapping": {
        "Q1": { "months": [1, 2, 3], "label": "Q1 (Jan-Mar)" },
        "Q2": { "months": [4, 5, 6], "label": "Q2 (Apr-Jun)" },
        "Q3": { "months": [7, 8, 9], "label": "Q3 (Jul-Sep)" },
        "Q4": { "months": [10, 11, 12], "label": "Q4 (Oct-Dec)" }
      }
    },

    "month": {
      "enabled": true,
      "format": "numeric",
      "names": {
        "1": "January",
        "2": "February",
        "3": "March",
        "4": "April",
        "5": "May",
        "6": "June",
        "7": "July",
        "8": "August",
        "9": "September",
        "10": "October",
        "11": "November",
        "12": "December"
      },
      "shortNames": {
        "1": "Jan",
        "2": "Feb",
        "3": "Mar",
        "4": "Apr",
        "5": "May",
        "6": "Jun",
        "7": "Jul",
        "8": "Aug",
        "9": "Sep",
        "10": "Oct",
        "11": "Nov",
        "12": "Dec"
      }
    },

    "weekNumber": {
      "enabled": true,
      "format": "numeric",
      "standard": "ISO8601",
      "range": [1, 53],
      "firstDayOfWeek": "Sunday"
    },

    "dayNumber": {
      "enabled": true,
      "format": "numeric",
      "range": [1, 31],
      "description": "Day of month as number"
    },

    "dayOfWeek": {
      "enabled": true,
      "startsWith": "Sunday",
      "indexing": {
        "0": "Sunday",
        "1": "Monday",
        "2": "Tuesday",
        "3": "Wednesday",
        "4": "Thursday",
        "5": "Friday",
        "6": "Saturday"
      }
    },

    "dayOfWeekShort": {
      "enabled": true,
      "format": "3-letter",
      "mapping": {
        "0": "Sun",
        "1": "Mon",
        "2": "Tue",
        "3": "Wed",
        "4": "Thu",
        "5": "Fri",
        "6": "Sat"
      }
    },

    "periodOfDay": {
      "enabled": true,
      "categories": {
        "earlyMorning": {
          "label": "Early Morning",
          "hourRange": [0, 5],
          "description": "12:00 AM - 5:59 AM"
        },
        "morning": {
          "label": "Morning",
          "hourRange": [6, 11],
          "description": "6:00 AM - 11:59 AM"
        },
        "afternoon": {
          "label": "Afternoon",
          "hourRange": [12, 17],
          "description": "12:00 PM - 5:59 PM"
        },
        "evening": {
          "label": "Evening",
          "hourRange": [18, 20],
          "description": "6:00 PM - 8:59 PM"
        },
        "night": {
          "label": "Night",
          "hourRange": [21, 23],
          "description": "9:00 PM - 11:59 PM"
        }
      }
    },

    "hour": {
      "enabled": true,
      "format": "24h",
      "range": [0, 23],
      "displayFormat": "HH:00"
    }
  },

  "documentTypes": {
    "email": {
      "timestampSources": ["sentDate", "receivedDate", "dateHeader"],
      "preferredSource": "sentDate",
      "extractFrom": ["headers", "metadata"]
    },
    "pdf": {
      "timestampSources": ["creationDate", "modifiedDate", "metadata"],
      "preferredSource": "creationDate",
      "extractFrom": ["properties", "embeddedMetadata"]
    },
    "docx": {
      "timestampSources": ["creationDate", "modifiedDate", "lastPrinted"],
      "preferredSource": "creationDate",
      "extractFrom": ["documentProperties"]
    },
    "generic": {
      "timestampSources": ["fileCreated", "fileModified", "fileAccessed"],
      "preferredSource": "fileCreated",
      "extractFrom": ["filesystem"]
    }
  },

  "analysisOutputFormat": {
    "standardizedRecord": {
      "documentId": "string",
      "fileName": "string",
      "documentType": "string",
      "fullTimestamp": "YYYY-MM-DD HH:mm:ss",
      "year": "number",
      "quarter": "string",
      "month": "number",
      "monthName": "string",
      "weekNumber": "number",
      "dayNumber": "number",
      "dayOfWeek": "string",
      "dayOfWeekShort": "string",
      "periodOfDay": "string",
      "hour": "number",
      "timezone": "string",
      "timestampConfidence": "high|medium|low",
      "originalTimestamp": "string",
      "notes": "string"
    }
  },

  "patternDetectionHints": {
    "clusteringByPeriod": "Identify unusual activity patterns (e.g., late night emails)",
    "quarterlyTrends": "Track activity increases/decreases by business quarter",
    "weekdayVsWeekend": "Compare business vs. personal time activity",
    "timeGaps": "Identify suspicious periods of silence or intense activity",
    "chronologicalSequencing": "Establish exact order of events for narrative"
  },

  "qualityControl": {
    "flagMissingTimestamps": true,
    "flagAmbiguousTimestamps": true,
    "flagTimezoneConflicts": true,
    "flagDuplicateTimestamps": true,
    "flagFutureTimestamps": true,
    "confidenceLevels": {
      "high": "Timestamp from reliable metadata",
      "medium": "Timestamp inferred from filename or content",
      "low": "Timestamp from file system (unreliable)"
    }
  }
}
